		<!-- Begin Content -->
			<div class="content-40mg">
				<div class="container">

					<div class="row">

						<!-- Begin Login -->
						<div class="col-sm-6">
							<div class="panel no-margin panel-default">
							    <div class="panel-heading">Войти в свой аккаунт</div>
							    <div class="panel-body">
							        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
							            <div class="form-group">
							                <div class="input-group">
							                    <div class="input-group-addon"><span class="ion-android-mail" style="font-size:9px;"></span></div>
							                    <%= f.email_field :email, :class => "form-control", :id => "exampleInputEmail1", :placeholder => "Введите email" %>
							                </div>
							            </div>
							            <div class="form-group">
							            	<div class="input-group">
							                    <div class="input-group-addon"><span class="ion-ios7-locked"></span></div>
							                	<%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "exampleInputPassword1", :placeholder => "Введите пароль" %>
							                </div>
							            </div>
							            <hr class="mb20 mt15">
							            <button type="submit" class="btn btn-rw btn-primary">Войти</button> &nbsp;&nbsp;&nbsp;<small><a href="#">Забыли пароль?</a></small>
							        <% end %><!-- /form -->
							    </div><!-- /panel body -->
							</div><!-- /panel -->
						</div><!-- /column-->
						<!-- End Login -->

						<!-- Begin Register -->
						<div class="col-sm-6 mt30-xs">
							<div class="panel no-margin panel-default">
							    <div class="panel-heading">Регистрация</div>
							    <div class="panel-body">
							    	

							        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
										<%= devise_error_messages! %>
							            <div class="form-group">
							                <div class="input-group">
							                    <div class="input-group-addon"><span class="ion-android-mail" style="font-size:9px;"></span></div>
							                    <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Ваш email", :required => true %>
							                </div>
							            </div>
							            <div class="form-group">
							            	<div class="input-group">
							                    <div class="input-group-addon"><span class="ion-ios7-locked"></span></div>
							                	<%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "exampleInputPassword3", :placeholder => "Пароль", :required => true %>
							                </div>
							            </div>
							            <div class="form-group">
							            	<div class="input-group">
							                    <div class="input-group-addon"><span class="ion-ios7-locked"></span></div>
							                	<%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :id => "exampleInputPassword4", :placeholder => "Повторите пароль", :required => true %>
							                </div>
							            </div>
							            <hr class="mb20 mt20">
							            <div class="form-group">
							              <%= f.text_field :name, :class => "form-control", :id => "firstName", :placeholder => "Ваше Имя", :required => true %>
							            </div>
							            <hr class="mt20 mb20">
							            <%= f.submit "Зарегистрироваться", :class => "btn btn-rw btn-primary" %>
							        <% end %>
							    </div><!-- /panel body -->
							</div><!-- /panel -->
						</div><!-- /column-->
						<!-- End Register -->

					</div><!-- /row -->

				</div><!-- /container -->
			</div><!-- /content -->
			<!-- End Content -->