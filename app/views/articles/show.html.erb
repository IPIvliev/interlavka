<!-- Begin Content Section -->
      <section class="mt40 mb40">
        <div class="container">
            <div class="row">
              <div class="col-sm-9">
              <div class="blog-post" itemscope itemtype="http://schema.org/Article">
                        <!-- Реклама над текстом -->
                        <%= render "/static_pages/adv_over_text" %>
                            <meta itemprop="genre" content="Статьи портала микроэлектроники">
                            <%= image_tag @article.image.url, :class => "img-responsive full-width", :itemprop => "image", :title => @article.name, :alt => @article.name %> 
                            <div class="blog-post-holder">
                                <ul class="list-inline posted-info">
                                    <li><strong>Автор:</strong> <%= link_to @article.user.name, @article.user, :itemprop => "author" if @article.user.present? %></li>
                                    <li><strong>Категория:</strong> <%= @article.category.name if @article.category %></li>
                                    <meta itemprop="dateCreated" content="<%= @article.created_at.to_time.iso8601 %>">
                                    <li><strong>Создано:</strong> <%= Russian::strftime(@article.created_at, "%d %B %Y") %></li>
                                    <% if current_user == @article.user || current_user && current_user.role == "admin" %>
                                      <li><%= link_to "Редактировать статью", edit_article_path(@article) %></li>
                                    <% end %>
                                </ul>
                                <hr align="left" class="mt15 mb10" style="width:50px;">
                                <h1 itemprop="headline"><%= @article.name %></h1>
                              <div style="overflow: hidden; position: relative", width="10px" itemprop="description"><%= @article.text.html_safe %></div>
                            </div>  

                  <!-- Реклама под текстом -->
                  <%= render "/static_pages/adv_under_text" %>
                  
                  <!-- Комментарии -->
                  <%= render "comments" %>
                  </div>

                </div>
              <%= render "/static_pages/column" %>
          </div>
      </section><!-- /content -->
      <!-- End Content Section -->